{% schema %}
{
  "name": "Vet Approved",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge Image"
    },
    {
      "type": "select",
      "id": "badge_position",
      "label": "Badge Position",
      "default": "top_left",
      "options": [
        { "label": "Top Left", "value": "top_left" },
        { "label": "Top Right", "value": "top_right" },
        { "label": "Bottom Left", "value": "bottom_left" },
        { "label": "Bottom Right", "value": "bottom_right" }
      ]
    },
    {
      "type": "text",
      "id": "doctor_name",
      "label": "Doctor Name",
      "default": "Dr. Ernie Sanderson"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Veterinarian-Approved"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "All products from Dr. Ernie's are vetted and approved by a qualified veterinarian, ensuring top-quality care for your pet."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View Products"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Vet Approved"
    }
  ]
}
{% endschema %}

<div class="vet-approved-section">
  <div class="vet-approved-image">
    {% if section.settings.main_image %}
      <img src="{{ section.settings.main_image | image_url: width: 800 }}" alt="Vet Image" class="main-img" loading="lazy">
    {% endif %}

    {% if section.settings.badge_image %}
      <img
        src="{{ section.settings.badge_image | image_url: width: 100 }}"
        alt="Badge"
        class="badge-img {{ section.settings.badge_position }}"
        loading="lazy"
      >
    {% endif %}
  </div>

  <div class="vet-approved-content">
    <p class="vet-doctor">{{ section.settings.doctor_name }}</p>
    <h2 class="vet-headline">{{ section.settings.headline }}</h2>
    <p class="vet-body">{{ section.settings.body_text }}</p>
    {% if section.settings.button_url %}
      <a href="{{ section.settings.button_url }}" class="vet-btn">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</div>

<style>
.vet-approved-section {
  padding: 20px;
  max-width: 1200px;
  margin: auto;
}

.vet-approved-image {
  position: relative;
}

.main-img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 8px;
}

.badge-img {
  position: absolute;
  width: 60px;
  height: 60px;
}

.badge-img.top_left {
  top: 10px;
  left: 10px;
}
.badge-img.top_right {
  top: 10px;
  right: 10px;
}
.badge-img.bottom_left {
  bottom: 10px;
  left: 10px;
}
.badge-img.bottom_right {
  bottom: 10px;
  right: 10px;
}

.vet-approved-content {
  text-align: center;
  margin-top: 20px;
}

.vet-doctor {
  color: #f59e0b;
  font-weight: 600;
  margin-bottom: 8px;
}

.vet-headline {
  font-size: 24px;
  font-weight: 700;
  margin: 0 0 12px;
}

.vet-body {
  font-size: 16px;
  color: #555;
  margin-bottom: 20px;
  line-height: 1.5;
}

.vet-btn {
  background-color: #000;
  color: #fff;
  text-decoration: none;
  padding: 12px 24px;
  border-radius: 6px;
  display: inline-block;
  font-weight: 600;
}

@media (min-width: 768px) {
  .vet-approved-section {
    display: flex;
    gap: 40px;
    align-items: center;
  }

  .vet-approved-image,
  .vet-approved-content {
    flex: 1;
  }

  .vet-approved-content {
    text-align: left;
    margin-top: 0;
  }
}
</style>
